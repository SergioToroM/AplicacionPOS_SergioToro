<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <%- include('head'); %>
    <title>Lista vendedores</title>
    
    <style>
        .button {
          border: none;
          color: white;
          padding: 4px 18px;
          text-align: center;
          text-decoration: none;
          display: inline-block;
          font-size: 13px;
          margin: 4px 2px;
          transition-duration: 0.4s;
          cursor: pointer;
        }
        
        .button1 {
          background-color: white; 
          color: black; 
          border: 2px solid #4CAF50;
        }
        
        .button1:hover {
          background-color: #4CAF50;
          color: white;
        }

        .button2 {
          background-color: white; 
          color: black; 
          border: 2px solid #df3b3b;
        }
        
        .button2:hover {
          background-color: #df3b3b;
          color: white;
        }

        h1, h2 {
            text-align: center;
            font-size: 60px;
            font-family: 'Rogthem';
        }

        #customers {
            font-family: Arial, Helvetica, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        #customers td, #customers th {
            border: 1px solid #ddd;
            padding: 5px;
        }

        #customers tr:nth-child(even){background-color: #f2f2f2;}

        #customers tr:hover {background-color: #ddd;}

        #customers th {
            text-align: center;
            background-color: #188a60;
            color: white;
        }

        #customers td {
            text-align: center;
        }

        #logo-empresa {
            color: white;
            text-shadow:
                0 0 5px white,
                0 0 10px white,
                0 0 15px white,
                0 0 20px lime,
                0 0 30px lime,
                0 0 40px lime,
                0 0 55px lime,
                0 0 75px lime;

        }

    </style>
</head>
<body class="container">

<header>
    <%- include('header'); %>
</header>

<main><br><br><br>
    <div class="form-group">
        <form>
        <h2>Lista vendedores</h2>
            <table id="customers">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nombre</th>
                        <th>Documento</th>
                        <th>Correo</th>
                        <th>Ventas despachadas</th>
                        <th>Administrar</th>
                    </tr>
                    </thead>
                    <tbody>
                    
                        <% listavendedores.forEach(function(sellers) { %>
                    <tr>
                        <td><%=sellers.id %></td>
                        <td><%=sellers.Nombre %></td>
                        <td><%=sellers.Documento %></td>
                        <td><%=sellers.Correo %></td>
                        <td><%=sellers.VentasDespachadas %></td>
                        <td><button type="button" class="button button1" data-bs-toggle="modal" onclick="camposVendedor(`<%=sellers.id %>`,`<%=sellers.Nombre %>`,`<%=sellers.Documento %>`,`<%=sellers.Correo %>`,`<%=sellers.VentasDespachadas %>`)" data-bs-target="#modificarVendedor"><i class="fa fa-edit"></i>  Modificar</button><button type="button" class="button button2" data-toggle="modal" data-target="#delete"><i class="fa fa-close"></i>  Eliminar</button></td>
                        
                        

                    </tr>
                        <% }); %>
                    </tbody>

            </table>
        </form>

    </div>

    <!-- Modal modificar-->
    <div class="modal fade" id="modificarVendedor" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Modificar Vendedor</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                    <div class="modal-body">
                        <form id="/api/modificar-vendedor" method="put">
                            
                            <div class="mb-3">
                                <label for="recipient-name" class="col-form-label">ID:</label>
                                <input type="text" class="form-control" id="idvendedor" readonly>
                              </div>
                              <div class="mb-3">
                                <label for="message-text" class="col-form-label">Nombre:</label>
                                <input type="text" class="form-control" id="idnombrevendedor">
                              </div>
                              <div class="mb-3">
                                  <label for="message-text" class="col-form-label">Documento:</label>
                                  <input type="text" class="form-control" id="iddocvendedor">
                              </div>
                              <div class="mb-3">
                                <label for="message-text" class="col-form-label">Correo:</label>
                                <input type="text" class="form-control" id="idcorreovendedor">
                            </div>
                            <div class="mb-3">
                                <label for="message-text" class="col-form-label">Ventas despachadas:</label>
                                <input type="text" class="form-control" id="idventasdespachadas">
                            </div>
                    

                        </form>
                    </div>
                 <div class="modal-footer">
                    <button type="button" class="button button2" data-bs-dismiss="modal">Cerrar</button>
                    <button type="button" class="button button1" data-bs-dismiss="modal">Guardar cambios</button>
                </div>
            </div>
        </div>
    </div>

    
</main>

<footer>
    <%- include('footer'); %>
</footer>

    <script>
        function camposVendedor(a,b,c,d,e) {
            idvendedor.value = a,
            idnombrevendedor.value = b,
            iddocvendedor.value = c,
            idcorreovendedor.value = d,
            idventasdespachadas.value = e
        }
    </script>
  
</body>
</html>