    transform: scale(1);
  }
} */

    .ticket__content {
        width: 100%;
        position: absolute;
        bottom: 0;
        text-align: center;

    }

    .ticket__movie-title {
        text-transform: uppercase;
        margin-bottom: 5px;

    }

    .ticket__movie-slogan {
        color: #999;
        font-size: 14px;
        margin-bottom: 20px;

    }

    .ticket__current-price {
        color: #69c982;
        font-size: 1.4rem;
        font-weight: bold;

    }

    .ticket__old-price {
        color: red;
        text-decoration: line-through;
        margin-bottom: 10px;

    }

    .ticket__buy-btn {
        cursor: pointer;
        width: 100%;
        background: #2f2f2f;
        color: white;
        padding: 15px 0;
        font-size: 1rem;
        font-weight: bold;
        text-transform: uppercase;
        border: 0;
        border-bottom-left-radius: 5px;
        border-bottom-right-radius: 5px;
    }


