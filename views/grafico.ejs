<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js"></script>
    <title>.: Gr√°fico :.</title>
</head>
<body>
    <header>
    <%- include('header'); %>
    </header>
    <% listaproductos.forEach(function(product) { %>
    <canvas id="myChart" style="width:100%;max-width:600px"></canvas>
    <script>
        let xVal = <%=product.Nombre %>;
        let yVal = <%=product.Stock %>;
        var barColors = green;
        
        new Chart("myChart", {
          type: "bar",
          data: {
            labels: xVal,
            datasets: [{
              backgroundColor: barColors,
              data: yVal
            }]
          },
          options: {
            legend: {display: false},
            title: {
              display: true,
              text: "Stock Productos"
            }
          }
        });
        <% }); %>
        </script>
</body>
<footer>
    <%- include('footer'); %>
</footer>

</html>