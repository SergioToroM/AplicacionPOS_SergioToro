    body {

        background-repeat: no-repeat;
        background-size: cover;
        background-attachment: fixed;
        margin-bottom: 30px;
    }

    .container-card {
        display: inline-table;
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: space-between;
        border-radius: 10px;
        padding: 8px;
        text-align: center;
        margin-bottom: 10px;
    }

    .carousel-inner img {
        height: 350px;
        /* display: flex;
        align-items: center;
        justify-content: center; */
    }

    #productos {
        text-align: center;

    }

    .center {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .addNumber_cont {
        display: flex;
        justify-content:space-between;
        align-items: center;
        
    }

    .button {
        border-radius: 58px;
        font-weight: bold;
        
    }
    
    .value_cont {
        width: 70px;
        height: 100%;
        margin: 5px;
        border-radius: 10px;
        background-color: rgb(243, 242, 242);
        box-shadow: 0px 10px 10px #00000030;
        display: flex;
        justify-content: center;
        align-items: center;
    }

