<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- cards -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script> <!-- cards -->


    <title>Productos</title>
</head>

<style>
    h1,
    h2 {
        text-align: center;
        font-size: 40px;
    }

    @import url("https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700&display=swap");

    /* * {
        box-sizing: border-box;
        padding: 0;
        margin: 0;
    } */



    body {

        background-repeat: no-repeat;
        background-size: cover;
        background-attachment: fixed;
        margin-bottom: 30px;
    }

    .container-card {
        display: inline-table;
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: space-between;
        border-radius: 10px;
        padding: 8px;
        text-align: center;
        margin-bottom: 10px;
    }

    .carousel-inner img {
        /*width: 50%;
        height: 20%;*/
        /*display: flex;*/
        align-items: center;
        justify-content: center;
    }

    /* Offcanvas */
</style>

<header>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">FreakStore</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="#">Clientes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Vendedores</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">- Empty -</a>
                    </li>
                    <!-- <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Dropdown</a>
                    <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="#">Link</a></li>
                    <li><a class="dropdown-item" href="#">Another link</a></li>
                    <li><a class="dropdown-item" href="#">A third link</a></li>
                    </ul>
                    </li> -->
                </ul>
                <ul>
                    <li><button class="btn btn-primary" type="button" data-bs-toggle="offcanvas"
                            data-bs-target="#demo">Carrito</button></li>
                </ul>
            </div>
        </div>
    </nav>


</header>

<body>

    <div class="offcanvas offcanvas-end" id="demo">
        <div class="offcanvas-header">
            <h1 class="offcanvas-title">Carrito</h1>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
        </div>
        <div class="offcanvas-body">
            <p>Articulo 1</p>
            <p>Articulo 2</p>
            <p>Articulo 3</p>
            <button class="btn btn-secondary" type="button">Comprar</button>
        </div>
    </div>


    <%- include('header'); %>

        <!-- Carousel -->
        <div class="text-center bg-light">
            <div id="demo" class="carousel slide" data-bs-ride="carousel" style="background-color: white">
                <!-- Indicators/dots -->
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#demo" data-bs-slide-to="0" class="active"></button>
                    <button type="button" data-bs-target="#demo" data-bs-slide-to="1"></button>
                    <button type="button" data-bs-target="#demo" data-bs-slide-to="2"></button>
                </div>

                <!-- The slideshow/carousel -->
                <div class="carousel-inner row">
                    <div class="carousel-item active col-sm">
                        <img class="card-img-top" url="https://www.lavanguardia.com/files/og_thumbnail/uploads/2022/01/17/61e57183d0081.jpeg" alt="Los Angeles"
                            class="d-block" style="width:100%">
                    </div>
                    <div class="carousel-item col-sm">
                        <img class="card-img-top" url="https://cdn.resfu.com/media/img_news/leo-messi--en-un-comercial-de-adidas.jpg?size=1000x&lossy=1" alt="Chicago"
                            class="d-block" style="width:100%">
                    </div>
                    <div class="carousel-item col-sm">
                        <img class="card-img-top" url="https://www.mundiario.com/asset/thumbnail,1280,720,center,center/media/mundiario/images/2015/11/19/2015111911232476228.jpg" alt="New York"
                            class="d-block" style="width:100%">
                    </div>
                </div>

                <!-- Left and right controls/icons -->
                <button class="carousel-control-prev" type="button" data-bs-target="#demo" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon"></span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#demo" data-bs-slide="next">
                    <span class="carousel-control-next-icon"></span>
                </button>
            </div>
        </div>

        <main>

            <br>
            <h1>Productos</h1><br>
            <form>

                <% listaproductos.forEach(function(product) { %>




                    <div class="container-card">
                        <div class="card" style="width:300px; height:470px">
                            <img class="card-img-top" src="https://source.unsplash.com/featured/300x201"
                                alt="Card image" style="width:100%">
                            <div class="card-body">
                                <h4 class="card-title">
                                    <%=product.referencia %>
                                </h4>
                                <p class="card-text">
                                    <%=product.nombre %>
                                </p>
                                <p class="card-text">
                                    <%=product.descripcion %>
                                </p>
                                <h5 class="card-text">
                                    <%=product.precio %>
                                </h5>
                                <a href="#" class="btn btn-primary">Carrito</a>
                            </div>
                        </div>

                    </div>
                    <% }); %>
            </form>

            <form>

                <h2>Mapa</h2>

            </form>





        </main>

        <script>

        </script>

        <footer>
            <%- include('footer'); %>
        </footer>
</body>


