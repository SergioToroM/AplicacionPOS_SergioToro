    <%- include('header'); %>
        <main>

            <br>
            <h1>Productos</h1><br>
            <section id="productos">

                <% listaproductos.forEach(function(product) { %>

                    <div class="container-card">
                        <div class="card" style="width:300px; height:500px">
                            <img class="card-img-top" src="https://source.unsplash.com/featured/300x201"
                                alt="Card image" style="width:100%">
                            <div class="card-body">
                                <h4 class="card-title">
                                    <%=product.referencia %>
                                </h4>
                                <p class="card-text">
                                    <%=product.nombre %>
                                </p>
                                <p class="card-text">
                                    <%=product.descripcion %>
                                </p>
                                <h5 class="card-text">
                                    <%=product.precio %>
                                </h5>

                                <a href="#"> <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30"
                                        fill="currentColor" class="bi bi-cart4" viewBox="0 0 16 16">
                                        <path
                                            d="M0 2.5A.5.5 0 0 1 .5 2H2a.5.5 0 0 1 .485.379L2.89 4H14.5a.5.5 0 0 1 .485.621l-1.5 6A.5.5 0 0 1 13 11H4a.5.5 0 0 1-.485-.379L1.61 3H.5a.5.5 0 0 1-.5-.5zM3.14 5l.5 2H5V5H3.14zM6 5v2h2V5H6zm3 0v2h2V5H9zm3 0v2h1.36l.5-2H12zm1.11 3H12v2h.61l.5-2zM11 8H9v2h2V8zM8 8H6v2h2V8zM5 8H3.89l.5 2H5V8zm0 5a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0zm9-1a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0z" />
                                    </svg></a><br><br>
                                    <div class="center">
                                        <div class="addNumber_cont">
                                            <button id="disabledBtn" onclick="addValueFunction(this)" value="decrease"><i class='fas fa-minus'></i></button>
                                            <div class="value_cont">
                                                <h3 id="amount" value=""> 0 </h3>
                                            </div>
                                            <button onclick="addValueFunction(this)" value="increase"><i class='fas fa-plus'></i></button>
                                        </div>
                                    </div>

                            </div>
                        </div>

                    </div>
                    <% }); %>
            </section>

            <form>

                <h2>Mapa</h2>

            </form>





        </main>

        <script>
            let startValue = 0;
            let disabledBtn = document.getElementById("disabledBtn");
            disabledBtn.disabled = true;

            function addValueFunction (valuePar) {
                document.getElementById("amount").value;

                if (valuePar.value == 'increase') {
                    startValue++;
                } else {
                    startValue--;
                }
                document.getElementById("amount").textContent = startValue;

                if (startValue == 0) {
                    disabledBtn.disabled = true;
                } else {
                    disabledBtn.disabled = false;
                }
            }

        </script>

        <footer>
            <%- include('footer'); %>
        </footer>
</body>

</html>