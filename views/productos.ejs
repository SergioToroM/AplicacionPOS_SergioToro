                                    <%=product.precio %>
                                </h5>


                                <button type="button"
                                    style="border-radius:10px; border: 1px solid white; font-size: 30px;"
                                    onclick="carrito(`<%=product.id %>`,`<%=product.nombre %>`, `<%=product.precio %>`)">
                                    <i class="bi bi-cart4"></i>

                                </button><br><br>
                                

                            </div>
                        </div>

                    </div>
                    <% }); %>
            </section>

            <form>

                <h2>Mapa</h2>

            </form>





        </main>

        <script>

            let carritocomp = JSON.parse(localStorage.getItem("carritocompras")) || [];
            let body = document.getElementById("bodycarrito")

            function carrito(id, nombre, precio) {
                const repeat = carritocomp.some((repeatid) => repeatid.id == id);

                if(repeat){
                    carritocomp.map((produ) => {
                        if(produ.id == id) {
                            produ.cantidad++;
                        }
                    })
                }
                carritocomp.push({
                    id: id,
                    nombre: nombre,
                    precio: precio,
                    cantidad: 1
                });
                console.log(carritocomp);
                cookies();
                pintarCarrito();
            }

            function cookies() {
                localStorage = JSON.parse(localStorage.getItem("carritocompras"))

            };

            function pintarCarrito() {
                body.innerHTML = "";

                carritocomp.forEach(product => {
                    let carrito = document.createElement('div')
                    carrito.classList.add('d-flex', 'flex-row', 'justify-content-between', 'align-items-center');
                    carrito.innerHTML =
                        `<img src="https://source.unsplash.com/featured/300x201" style="height: 38px;">
                        <p>${product.nombre}</p>
                        <p>${product.precio}</p>
                        <button type= button class="button" onclick="sumar('${product.id}')"><i class="bi bi-plus-circle"></i></button>
                        <p style="text-align: center;">Cantidad: ${product.cantidad}</p>
                        <button type= button class="button" onclick="restar('${product.id}')"><i class="bi bi-dash-circle"></i></button>
                        <p>Total: ${product.cantidad * product.precio}</p>`;
                    body.append(carrito);

                    let eliminarprod = document.createElement('span');
                    eliminarprod.innerText = "ðŸ—‘";
                    eliminarprod.className = "delete-producto";
                    carrito.append(eliminarprod);

                    eliminarprod.addEventListener("click", eliminar);

                });
                const total = carritocomp.reduce((acc,pro) => acc + parseFloat(pro.precio) * (pro.cantidad), 0)
                    const totalproducts = document.createElement("div");
                    totalproducts.className = "total-content";
                    totalproducts.innerHTML = `<b>Pago total: $ ${total}</b>`;
                    body.append(totalproducts);
            };

            const eliminar = () => {
                const foundId = carritocomp.find((product) => product.id);
                console.log(foundId);

                carritocomp = carritocomp.filter((carritoId) => {
                    return carritoId !== foundId;

                });
                cookies();
                pintarCarrito();
            };

            function sumar(id){
                carritocomp.map((produ) => {
                    if(produ.id == id) {
                        produ.cantidad++;
                        cookies();
                        pintarCarrito();
                    }
                });
            }

            function restar(id){
                carritocomp.map((produ) => {
                    if(produ.id == id) {
                        produ.cantidad--;
                        cookies();
                        pintarCarrito()
                        if(produ.id == 0){
                            pintarCarrito();
                            cookies();
                            eliminar();
                        }
                    }
                });
            }

            

        </script>

